#! /bin/bash

# In das Arbeitsverzeichnis wechseln.
RealScriptPath="$(dirname $(readlink -f $0))"
cd  $RealScriptPath/../..
echo "Now in $(pwd)"

JavaOpts="-Xmx2g -Xms2g"
JavaParams="-Dgnd.configdir="/opt/gvi/solrmarc" -Dlog4j.configurationFile="log4j2.xml"
Config="-config gvi_index.properties"
SolrMarc="-jar solrmarc_core.jar IndexDriver"
Target="-url stdout"
Input="/test/data/1Title_hebis.xml"
CMD= "java $JavaOpts $JavaParams $SolrMarc $Config $Input"

echo "runing: $CMD"
$CMD