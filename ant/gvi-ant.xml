<?xml version="1.0" encoding="UTF-8"?>
<project name="config"
         default="index-all"
         xmlns:if="ant:if"
         xmlns:unless="ant:unless">

    <description>Basic configuration</description>
    
    <property file="gvi-ant.local.properties"/>
        
    <property name="gvi.input.dir"  location="/data/input/gvi"/>
    <property name="gvi.work.dir"   location="/data/work/gvi"/>
    <property name="gvi.backup.dir" location="/data/backup"/>
    
    <echo/>
    <echo>              gvi.input.dir  = ${gvi.input.dir}</echo>
    <echo>              gvi.work.dir   = ${gvi.work.dir}</echo>
    <echo>              gvi.backup.dir = ${gvi.backup.dir}</echo>
    
    <taskdef resource="net/sf/antcontrib/antlib.xml">
        <classpath>
            <pathelement location="${basedir}/lib/ant-contrib-1.0b3.jar"/>
        </classpath>
    </taskdef>
    
</project>
